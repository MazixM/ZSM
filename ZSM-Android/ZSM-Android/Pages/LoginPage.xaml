<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZSM_Android.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#0071cc">
            <Frame BackgroundColor="#005599" Padding="24" CornerRadius="0">
                <Label Text="Logwanie" HorizontalTextAlignment="Center" TextColor="White" FontSize="40"/>
            </Frame>
            <Frame BorderColor="Black" CornerRadius="10" Padding="0" Margin="30,30" BackgroundColor="White">
                <Entry MaxLength="20" Placeholder="Login..." Margin="30,10,30,10"></Entry>
            </Frame>
            <Frame BorderColor="Black" CornerRadius="10" Padding="0" Margin="30,0" BackgroundColor="White">
                <Entry MaxLength="20" IsPassword="True" Placeholder="Hasło..." Margin="30,10,30,10"></Entry>
            </Frame>
            <Button Text="Zaloguj" FontSize="20" HeightRequest="60" CornerRadius="10" Padding="5" Margin="30,30,30,10" BackgroundColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>